# Folio Backend Environment Variables
# Copy this file to .env and fill in your values

# ---------------------------------------------------------------------------
# Security
# ---------------------------------------------------------------------------

# API Key for authentication (optional, dev mode if unset)
# Generate with: make generate-key
# When unset, API authentication is disabled (dev mode)
FOLIO_API_KEY=

# Fernet encryption key for sensitive data (Telegram tokens)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Keep this key secret and backed up. Losing this key means losing access to encrypted data.
FERNET_KEY=

# CORS allowed origin for frontend access
# Default: http://localhost:8501
CORS_ALLOW_ORIGIN=http://localhost:8501

# ---------------------------------------------------------------------------
# Database
# ---------------------------------------------------------------------------

# SQLite database path (relative to container)
# Default: sqlite:///data/radar.db
DATABASE_URL=sqlite:///data/radar.db

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------

# Directory for application logs
# Default: /app/data/logs
LOG_DIR=/app/data/logs

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
LOG_LEVEL=INFO

# ---------------------------------------------------------------------------
# External Services (Optional)
# ---------------------------------------------------------------------------

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
# Note: Custom bot settings are stored in the database via the API,
# not in environment variables
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
