{
  "name": "Folio Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "onCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh",
  "postCreateCommand": "make setup",

  "forwardPorts": [3000, 8000],
  "portsAttributes": {
    "3000": { "label": "Frontend (Vite)", "onAutoForward": "notify" },
    "8000": { "label": "Backend (FastAPI)", "onAutoForward": "notify" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/azusa-stock/backend/.venv/bin/python",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
        "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
        "ruff.lint.run": "onSave"
      }
    }
  },

  "remoteEnv": {
    "DATABASE_URL": "sqlite:////workspaces/azusa-stock/data/radar.db",
    "LOG_DIR": "/workspaces/azusa-stock/logs"
  }
}
